# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Environment
VITE_ENVIRONMENT=development

# Nigerian Payment Providers

# Paystack Configuration
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
VITE_PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Flutterwave Configuration  
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-flutterwave-public-key
VITE_FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-flutterwave-secret-key

# Monnify Configuration
VITE_MONNIFY_API_KEY=MK_TEST_your_monnify_api_key
VITE_MONNIFY_SECRET_KEY=your_monnify_secret_key
VITE_MONNIFY_CONTRACT_CODE=your_contract_code

# Remita Configuration (Optional)
VITE_REMITA_MERCHANT_ID=your_merchant_id
VITE_REMITA_SERVICE_TYPE_ID=your_service_type_id
VITE_REMITA_API_KEY=your_remita_api_key

# Webhook URLs (for production)
VITE_PAYSTACK_WEBHOOK_URL=https://yourdomain.com/api/webhooks/paystack
VITE_FLUTTERWAVE_WEBHOOK_URL=https://yourdomain.com/api/webhooks/flutterwave
VITE_MONNIFY_WEBHOOK_URL=https://yourdomain.com/api/webhooks/monnify

# App Configuration
VITE_APP_NAME=PHCityRent
VITE_APP_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:3000/api

# Email Configuration (for notifications)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASS=your-app-password

# SMS Configuration (for OTP and notifications)
VITE_SMS_PROVIDER=termii
VITE_TERMII_API_KEY=your_termii_api_key
VITE_TERMII_SENDER_ID=PHCityRent

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Security
VITE_JWT_SECRET=your-jwt-secret-key
VITE_ENCRYPTION_KEY=your-encryption-key

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Social Media Links
VITE_FACEBOOK_URL=https://facebook.com/phcityrent
VITE_TWITTER_URL=https://twitter.com/phcityrent
VITE_INSTAGRAM_URL=https://instagram.com/phcityrent
VITE_LINKEDIN_URL=https://linkedin.com/company/phcityrent

# Support
VITE_SUPPORT_EMAIL=support@phcityrent.com
VITE_SUPPORT_PHONE=+2348012345678
VITE_WHATSAPP_NUMBER=+2348012345678

# Map Configuration
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Feature Flags
VITE_ENABLE_ESCROW=true
VITE_ENABLE_AGENT_VERIFICATION=true
VITE_ENABLE_PROPERTY_VERIFICATION=true
VITE_ENABLE_MAINTENANCE_REQUESTS=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# Cache Configuration
VITE_CACHE_TTL=3600000
VITE_ENABLE_CACHE=true

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_ERROR_REPORTING=true

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_DATA=false
